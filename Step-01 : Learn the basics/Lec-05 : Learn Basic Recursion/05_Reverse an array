class Solution {
    public void reverseArray(int arr[]) {
        int n = arr.length;

        // Swap elements from start and end moving toward the middle
        for (int i = 0; i < n / 2; i++) {
            int temp = arr[i];
            arr[i] = arr[n - i - 1];
            arr[n - i - 1] = temp;
        }
    }
}
